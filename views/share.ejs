<!DOCTYPE html>
<html lang="en">
    
    <%- include('layouts/header')-%>
    <body>
         <!-- Navigation-->
         <%- include('layouts/navbar_white')-%>
         
        <!-- Header-->
        <header class="bg-success py-5 " >
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">☘나눔☘</h1>
                    <p class="lead fw-normal text-white-50 mb-0">나눔을 위한 게시판 입니다!</p>
                </div>
            </div>
        </header>
        <div class="mt-2 container" style="text-align: right;">
            <button class="btn btn-outline-success mb-3 rounded" onclick="location.href='newshare'" id="sendMessageButton" type="submit">새글쓰기</button>
        </div>
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-3 justify-content-center"> <!--그리드 칸 수 row-col-xl-3-->

                    <% for(var i=0;i<posts.length;i++){%>
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top" src="<%= posts[i].image %>" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product title-->
                                    <h5 id="title" class="fw-bolder"><%= posts[i].title %></h5>
                                    
                                    <!--작성자-->
                                    <div style="text-align: left;">작성자 <span id="name"><%= posts[i].userid.username %></span></div>
                                    <div style="text-align: left;">위치 <span id="gate"><%= posts[i].gate %></span></div>
                                    <div style="text-align: left;">마감시간 <span id="time"><%= posts[i].deadline.toLocaleString() %></span></div>
                                   
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <%if(posts[i].isfinished==1){%>
                                    <div class="text-center"><a style="color:rgb(241, 143, 143)" class="btn btn-outline-dark mt-auto">마감되었습니다.</a></div>
                                <%}else{%>
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/cobuyingpost/<%=posts[i]._id%>">View options</a></div>
                                <%}%>
                            </div>
                        </div>
                    </div>


                    <%}%>

                </div>
            </div>
        </section>
        
        <%- include('layouts/footer')-%>
       
    </body>
</html>

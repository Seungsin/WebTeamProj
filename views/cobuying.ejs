<div class="container">
    <div>
        <a href="/newcobuying">새글쓰기</a>
        <a href="/auth/login">login</a>
    </div>
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <% for(var i=0;i<posts.length; i++){%>
            <div class="post-preview">
                <a href="/cobuyingpost/<%=posts[i]._id%>">
                    <h2 class="post-title">
                        <%= posts[i].title %>
                    </h2>
                    <h3 class="post-subtitle">
                        <%=posts[i].body %>
                    </h3>
                </a>
                <p class="post-meta">
                   
                    on <%= posts[i].deadline.toDateString() %>
                </p>
            </div>
            <hr />
            <%}%>
            
            <!-- Pager-->
            <div class="clearfix"><a class="btn btn-primary float-right" href="#!">Older Posts →</a></div>
        </div>
    </div>
</div>